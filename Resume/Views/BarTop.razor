@inject Settings settings

<MudAppBar Class="bg-white" Elevation=0 Fixed>

    <MudSpacer />

    <MudButton Class="rounded-circle" Href=@nameof(Exp)>
        <MudImage Src="img/menuExp.png" Height=@height />
    </MudButton>

    <MudButton Class="rounded-circle mx-5" Href=@nameof(Pet)>
        <MudImage Src="img/menuPet.png" Height=@height />
    </MudButton>

    <MudButton Class="rounded-circle" Href=@nameof(Bio)>
        <MudImage Src="img/menuBio.png" Height=@height />
    </MudButton>

    <MudSpacer />

    <MudFab Size=Size.Small DisableElevation Color=Color.Success OnClick=SetLanguage StartIcon=@Icons.Material.Outlined.Fitbit />

</MudAppBar>

@code {
    [Parameter] public EventCallback LanguageChanged { get; set; }
    const int height = 50;

    public void SetLanguage() {
        settings.Language = !settings.Language;
        LanguageChanged.InvokeAsync();
    }
}
