@inject Settings settings

<MudAppBar Class="bg-white" Elevation=0 Fixed>

    <MudSpacer />

    <MudButton Class="mr-1" Href=@nameof(Exp)>
        <MudImage Src="img/menuExp.png" Height=@height />
    </MudButton>

    <MudButton Class="mr-1" Href=@nameof(Pet)>
        <MudImage Src="img/menuPet.png" Height=@height />
    </MudButton>

    <MudButton Class="mr-1" Href=@nameof(Bio)>
        <MudImage Src="img/menuBio.png" Height=@height />
    </MudButton>

    <MudSpacer />

    <MudIconButton Size=Size.Medium Color=Color.Primary OnClick=SetLanguage Icon="@Icons.Material.TwoTone.Flag" />

</MudAppBar>

@code {
    const int height = 50;

    public void SetLanguage() {
        settings.SetLanguage();
        StateHasChanged();
    }
}
